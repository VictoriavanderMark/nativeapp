<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/back_colour">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="9pt"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/p1name_template"
        android:id="@+id/P1"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="9pt"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/p2name_template"
        android:id="@+id/P2"/>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom|right"
            android:text=""
            android:textSize="10pt"
            android:id="@+id/wordSoFar"/>

        <EditText
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/wordSoFar"
            android:layout_gravity="center"
            android:textSize="10pt"
            android:textStyle="normal"
            android:maxLength="1"
            android:background="@drawable/edittext_style"
            android:id="@+id/guesser"/>

    </RelativeLayout>

</LinearLayout>