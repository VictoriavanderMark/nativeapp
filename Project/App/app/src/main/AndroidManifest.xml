<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.victoria.ghost" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".WinningActivity"
            android:label="@string/won"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ChoosePlayersActivity"
            android:label="@string/select_players"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PlayerListActivity"
            android:label="@string/choose_player"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/leaderboard"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/tutorial">
        </activity>
    </application>

</manifest>
